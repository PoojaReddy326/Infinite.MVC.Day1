@model Infinite.MVC.Day1.Models.MyOrderDetailsViewModel
@{
    ViewBag.Title = "MyOrders";
}

<h2>Order Details</h2>

<h3>@Model.CustomerName</h3>
<hr />

<table>
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var product in Model.Products)
    {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                </tr>
    }
</table>
